mixin favoriteHeros(count, modalId)
  - var n = 0;

  .favorite-heros()&attributes(attributes)
    while n < count
      img.favorite-heros__item(src="@public/images/Arc_Warden_icon.png", alt=`{{ Hero, ${n++} }}`)
    if modalId
      button.favorite-heros__add.favorite-heros__item(type="button", aria-label="Добавить героя", data-expand-dialog=modalId)
          svg(width="24" height="24" viewBox="0 0 24 24" fill="none")
            path(d="M12 5V19" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            path(d="M5 12L19 12" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

mixin selectedFavoriteHeros(count, modalId)
  - var n = 0;

  .list-favorite-heros()&attributes(attributes)
    while n < count
      .list-favorite-heros__item
        img.list-favorite-heros__img(src="@public/images/Arc_Warden_icon.png", alt=`{{ Hero, ${n++} }}`)
        button.list-favorite-heros__remove.icon-button.button(aria-label="Удалить героя")
          svg(width="10" height="10" viewBox="0 0 10 10" fill="none")
            path(d="M1 9L9 1" stroke="#3E25D8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            path(d="M1 1L9 9" stroke="#3E25D8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
    div.list-favorite-heros__item.list-favorite-heros__item--empty

mixin hero(checked)
  label.hero
    input.hidden(type="checkbox", name="hero" checked=checked)
    img(src="@public/images/Arc_Warden_icon.png", alt="Arc Warden icon")
    .hero__check
      .hero__check-background
        svg(width="24" height="24" viewBox="0 0 24 24" fill="none")
          path(d="M6 12L10 16L18 8" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

