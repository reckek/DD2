include ../../components/head/head.pug
include ../../components/header/header.pug
include ../../components/sectionHeader/sectionHeader.pug
include ../../components/input/input.pug
include ../../components/footer/footer.pug

mixin blockTitle(message)
  h2.service-catalog__title= message

mixin steps(currentStep)
  p.step(class=currentStep === 1 && "step--current")
    span 1 шаг
    | Расчёт стоимости
  svg(width="25" height="24" viewBox="0 0 25 24" fill="none")
    path(fill-rule="evenodd" clip-rule="evenodd" d="M0.75 23L1.75 18L0.75 15V12L1.75 13L0.75 7L1.75 3L0.75 0H6.75L9.75 1L11.75 0L13.75 1H16.75L17.75 0L21.75 1L24.75 0L23.75 5L24.75 8L23.75 9.5L24.25 11L23.75 14L24.75 15V23L22.75 22L18.75 23L10.75 24L5.75 23H0.75ZM2.74984 4L4.74984 3L22.7498 15L20.7498 20H17.7498L2.74984 4ZM20.7498 5.00004L19.7498 9.00004L14.7498 5.00004L18.7498 4.00004L20.7498 5.00004ZM3.75 18L4.75 14L9.75 19L6.75 21L3.75 18Z" fill="#C4C1D2")
  p.step(class=currentStep === 2 && "step--current")
    span 2 шаг
    | Подготовка аккаунта
  svg(width="25" height="24" viewBox="0 0 25 24" fill="none")
    path(fill-rule="evenodd" clip-rule="evenodd" d="M0.75 23L1.75 18L0.75 15V12L1.75 13L0.75 7L1.75 3L0.75 0H6.75L9.75 1L11.75 0L13.75 1H16.75L17.75 0L21.75 1L24.75 0L23.75 5L24.75 8L23.75 9.5L24.25 11L23.75 14L24.75 15V23L22.75 22L18.75 23L10.75 24L5.75 23H0.75ZM2.74984 4L4.74984 3L22.7498 15L20.7498 20H17.7498L2.74984 4ZM20.7498 5.00004L19.7498 9.00004L14.7498 5.00004L18.7498 4.00004L20.7498 5.00004ZM3.75 18L4.75 14L9.75 19L6.75 21L3.75 18Z" fill="#C4C1D2")
  p.step(class=currentStep === 3 && "step--current")
    span 3 шаг
    | Данные аккаунта

mixin aside(status)
  .aside.border-clip-2
    if status === "showPromo"
      button.button Продолжить
      .aside__promo
        +input("Промокод")
        button.button.aside-button Применить
    else
      .aside-row
        button.outline-button
          svg(width="18" height="18" viewBox="0 0 18 18" fill="none")
            path(d="M9 1L1 9L9 17" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            path(d="M17 1L9 9L17 17" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        button.button= status === "payment" ? "Перейти к оплате" : "Выполнить"
    hr
    ul.aside__orders
      li.aside-order.order
        .order__title Дуо с бустером
        .order__description 10 000 ₽
      li.aside-order.order
        .order__title Дуо с бустером
        .order__description 10 000 ₽
      li.aside-order.order
        .order__title Дуо с бустером
        .order__description 10 000 ₽
      li.aside-order.order
        .order__title Дуо с бустером
        .order__description 10 000 ₽
    hr
    .aside-result.result
      .result__title Итого:
      .result__description 13 600 ₽

doctype html
html(lang="ru")
  +head('Каталог услуг')
  body
    +header
    main.main
      section.service-catalog
        +sectionHeader
          header.service-catalog__header.container.container-custom
            h1.section-title Каталог услуг
        .service-catalog__body.container.container-custom
          .service-catalog__steps
            block steps
          .service-catalog__content-layout.border-clip-2
            .service-catalog__content
              block content
            aside.service-catalog__aside
              block aside

    +footer
