mixin aside(status)
  .aside.border-clip-2
    if status === "showPromo"
      button.button Продолжить
      .aside__promo
        +input("Промокод")
        button.button.aside-button Применить
    else
      .aside-row
        button.outline-button
          svg(width="18" height="18" viewBox="0 0 18 18" fill="none")
            path(d="M9 1L1 9L9 17" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            path(d="M17 1L9 9L17 17" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        button.button= status === "payment" ? "Перейти к оплате" : "Выполнить"
