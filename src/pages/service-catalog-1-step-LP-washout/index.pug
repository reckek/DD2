extends ../service-catalog-layout/index.pug
include ../../components/range/range.pug
include ../../components/favoriteHeros/favoriteHeros.pug

block steps
  +steps(1)

block tabsList
  +tabs("LP washout")

block aside
  +aside()

block content
  +blockTitle("Отмыв ЛП")
  .lp-washout
    +imgWithLabel("@public/images/rank-1.png", "Herald II")
    +input("Кол-во игр")(type="number" value="1")
    .lp-washout__preview
      +input("Возмож. ранг (MMR)")(type="number" value="1500")
      +range(60)

block services
  +blockSubTitle("Доп услуги:")
  +service(false, "Дуо с бустером", 60)
  +service(true, "Приоритетный заказ", 60)
  +service(true, "Включить стрим с выполнением", 60)
  +service(true, "Не отключать Steam Guard", 60)
  +service(false, "Установить время для игры", 60, true)
    input(type="date", name="time to game")
  +service(true, "Играть моими героями", 60, true)
    +favoriteHeros(4)
  +service(true, "Забанить 5 героев", 60, true)
    +favoriteHeros(4)

block modals
  +modals
